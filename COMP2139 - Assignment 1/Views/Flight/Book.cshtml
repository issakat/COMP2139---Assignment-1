@model FlightBooking

@{
    ViewData["Title"] = "Book Flight";
}

<div class="container">
    <h2>Book Flight</h2>

    <form asp-action="Book" method="post">
        <div class="form-group">
            <label asp-for="FlightNumber">Flight Number:</label>
            <input asp-for="FlightNumber" class="form-control" required />
        </div>


        <button type="submit" class="btn btn-primary">Confirm Flight Booking</button>
    </form>
</div>
