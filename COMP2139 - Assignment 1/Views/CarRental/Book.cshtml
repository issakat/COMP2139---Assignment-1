@model CarRentalBooking

@{
    ViewData["Title"] = "Book Car Rental";
}

<div class="container">
    <h2>Book Car Rental</h2>

    <form asp-action="Book" method="post">
        <div class="form-group">
            <label asp-for="CarModel">Car Model:</label>
            <input asp-for="CarModel" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Confirm Car Rental Booking</button>
    </form>
</div>