@model HotelBooking

@{
    ViewData["Title"] = "Book Hotel";
}

<div class="container">
    <h2>Book Hotel</h2>

    <form asp-action="Book" method="post">
        <div class="form-group">
            <label asp-for="CheckInDate">Check-In Date:</label>
            <input asp-for="CheckInDate" type="date" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="CheckOutDate">Check-Out Date:</label>
            <input asp-for="CheckOutDate" type="date" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="NumberOfGuests">Number of Guests:</label>
            <input asp-for="NumberOfGuests" type="number" class="form-control" required min="1" />
        </div>

        <div class="form-group">
            <label asp-for="ContactPerson">Contact Person:</label>
            <input asp-for="ContactPerson" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Confirm Booking</button>
    </form>
</div>
