@model HotelBooking

@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="container">
    <h2>Booking Confirmation</h2>

    <p>Your booking has been confirmed. Details:</p>

    <ul>
        <li><strong>Check-In Date:</strong> @Model.CheckInDate</li>
        <li><strong>Check-Out Date:</strong> @Model.CheckOutDate</li>
        <li><strong>Number of Guests:</strong> @Model.NumberOfGuests</li>
        <li><strong>Contact Person:</strong> @Model.ContactPerson</li>
    </ul>

    <p>Thank you for choosing our hotel!</p>
</div>
